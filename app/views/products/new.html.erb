<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: 'name' %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, id: 'price' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, id: 'description' %>
  </div>

  <div class="field">
    <%= f.label :inventory %>
    <%= f.number_field :inventory, id: 'inventory' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
